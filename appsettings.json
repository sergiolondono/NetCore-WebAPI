  "Serilog": {
    "MinimunLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp} [{Level}] - Message: {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=SERGIO-PC\\SQLEXPRESS;Initial Catalog=my-books-db;Integrated Security=True;Pooling=False",
          "tableName": "Logs"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnectionString": "Data Source=SERGIO-PC\\SQLEXPRESS;Initial Catalog=my-books-db;Integrated Security=True;Pooling=False"
  }
}
